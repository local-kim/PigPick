<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="data.mapper.ReviewMapperInter">
    <select id="getMaxNum" resultType="int">
      select ifnull(max(num),0) from review
    </select>
    	<select id="getTotalCount" resultType="int">
	  select count(*) from review
	  </select>
	  <select id="getList" parameterType="map" resultType="review">
	  select * from review order by num,member_num,content 
	  </select>
	  <delete id="deleteReview" parameterType="int">
	     delete from review where num=#{num}
	  </delete>



</mapper>